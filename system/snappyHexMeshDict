FoamFile
{
    format      ascii;
    class       dictionary;
    object      snappyHexMeshDict;
}

// Steps to run
castellatedMesh true;
snap            true;
addLayers       true;

// Geometry
geometry
{
    terrain
    {
        type triSurfaceMesh;
        file "terrain.stl";
    }

    // Innermost box - finest resolution
    AOI_level3
    {
        type searchableBox;
        min (-4000 -4000 0);
        max (4000 4000 2000);      // 8×8m, full height
    }

    // Middle box - medium resolution  
    AOI_level2
    {
        type searchableBox;
        min (-5000 -5000 0);
        max (5000 5000 3000);      // 10×10km
    }

    // Outer box - coarse resolution
    AOI_level1
    {
        type searchableBox;
        min (-6000 -6000 0);
        max (6000 6000 5000);      // 12×12km
    }
};

// Castellated mesh controls
castellatedMeshControls
{
    maxLocalCells 2000000;
    maxGlobalCells 20000000;
    minRefinementCells 20;
    maxLoadUnbalance 0.1;
    nCellsBetweenLevels 4;

    features
    (
        {
            file "terrain.eMesh";
            level 2;
        }
    );

    refinementSurfaces
    {
        terrain
        {
            level (2 3); // increased for better terrain resolution
            patchInfo
            {
                type wall;
            }
        }
    }

    refinementRegions
    {
        AOI_level3
        {
            mode inside;
            levels ((0 3));            // 28.5m resolution
        }
        
        AOI_level2
        {
            mode inside;
            levels ((0 2));            // 57m resolution
        }
        
        AOI_level1
        {
            mode inside;
            levels ((0 1));            // 114m resolution
        }
    }

    resolveFeatureAngle 60;

    insidePoint (0 0 1000);
    allowFreeStandingZoneFaces true;
}

// Snap controls
snapControls
{
    nSmoothPatch 5;
    tolerance 2.0;
    nSolveIter 100;
    nRelaxIter 10;
    nFeatureSnapIter 15;
}

// Layer addition
addLayersControls
{
    relativeSizes true;

    layers
    {
        terrain
        {
            nSurfaceLayers 5; // reduced to avoid common instability with terrain
        }
    }

    expansionRatio 1.3;
    firstLayerThickness 0.08; // slightly thinner first layer
    minThickness 0.01;
    nGrow 1;

    featureAngle 70;
    slipFeatureAngle 35;
    nRelaxIter 10;
    nSmoothSurfaceNormals 3;
    nSmoothNormals 5;
    nSmoothThickness 10;
    maxFaceThicknessRatio 0.5;
    maxThicknessToMedialRatio 0.4;
    minMedianAxisAngle 90;
    nBufferCellsNoExtrude 0;
    nLayerIter 60;
    nRelaxedIter 20;
}

// Mesh quality
meshQualityControls
{
    maxNonOrtho 70;
    maxBoundarySkewness 20;
    maxInternalSkewness 4;
    maxConcave 80;
    minVol -1e24;
    minTetQuality 1e-18;
    minTwist 0.02;
    minDeterminant 0.001;
    minFaceWeight 0.05;
    minVolRatio 0.01;

    nSmoothScale 4;
    errorReduction 0.8;

    relaxed
    {
        maxNonOrtho 75;
    }
}

// Merge tolerance
mergeTolerance 1e-6;


// ************************************************************************* //