FoamFile
{
    format      ascii;
    class       dictionary;
    object      snappyHexMeshDict;
}

// Steps to run
castellatedMesh true;
snap            true;
addLayers       true;

// Geometry
geometry
{
    terrain
    {
        type triSurfaceMesh;
        file "terrain.stl";
    }

    AOI_uniform
    {
        type searchableBox;
        min (-5000 -5000 0);
        max (5000 5000 1500);
    }
    
    // Transition zones for smooth boundary conditions
    transition_zone
    {
        type searchableBox;
        min (-8000 -8000 0);
        max (8000 8000 2500);
    }
    
    // Outermost zone (coarse for boundary development)
    outer_zone
    {
        type searchableBox;
        min (-12000 -12000 0);
        max (12000 12000 4000);
    }

    
};

// Castellated mesh controls
castellatedMeshControls
{
    maxLocalCells 2000000;
    maxGlobalCells 20000000;
    minRefinementCells 20;
    maxLoadUnbalance 0.1;
    nCellsBetweenLevels 5;

    features
    (
        {
            file "terrain.eMesh";
            level 2;
        }
    );

    refinementSurfaces
    {
        terrain
        {
            level (2 3); // increased for better terrain resolution
            patchInfo
            {
                type wall;
            }
        }
    }

    refinementRegions
    {
        
        AOI_uniform
        {
            mode inside;
            levels ((0 4));    // 30m resolution across ENTIRE 8x8km AOI
        }
        
        // Transition zones for smooth boundary conditions
        transition_zone
        {
            mode inside;
            levels ((0 2));    // 120m resolution in transition zone
        }
        
        // Outermost zone (coarse for boundary development)
        outer_zone
        {
            mode inside;
            levels ((0 1));    // 240m resolution in outer domain
        }
        
        // Terrain following only in AOI
        terrain
        {
            mode distance;
            levels ((100 2) (300 1));  // Additional refinement near terrain
        }
    }

    resolveFeatureAngle 60;

    insidePoint (0 0 1000);
    allowFreeStandingZoneFaces true;
}

// Snap controls
snapControls
{
    nSmoothPatch 5;
    tolerance 2.0;
    nSolveIter 100;
    nRelaxIter 10;
    nFeatureSnapIter 15;
}

// Layer addition
addLayersControls
{
    relativeSizes true;  // Keep this for now

    layers
    {
        terrain
        {
            nSurfaceLayers 8;  // Increase from 3 to 8 (Ventos had ~10-15)
        }
    }

    expansionRatio 1.4;        // Increase from 1.3 (Ventos showed ~1.3-1.5)
    firstLayerThickness 0.03;  // Reduce from 0.08 (thinner first layer)
    minThickness 0.005;        // Reduce minimum
    nGrow 1;

    // More aggressive settings for terrain following
    featureAngle 80;           // Increase from 70 (more permissive)
    slipFeatureAngle 40;       // Increase from 35
    nRelaxIter 15;             // Increase from 10 (more relaxation)
    nSmoothSurfaceNormals 5;   // Increase from 3
    nSmoothNormals 8;          // Increase from 5
    nSmoothThickness 15;       // Increase from 10
    maxFaceThicknessRatio 0.6; // Increase from 0.5
    maxThicknessToMedialRatio 0.5; // Increase from 0.4
    minMedianAxisAngle 85;     // Reduce from 90 (more flexible)
    nBufferCellsNoExtrude 0;
    nLayerIter 80;             // Increase from 60 (more iterations)
    nRelaxedIter 30;           // Increase from 20
}

// Mesh quality
meshQualityControls
{
    maxNonOrtho 70;
    maxBoundarySkewness 20;
    maxInternalSkewness 4;
    maxConcave 80;
    minVol -1e24;
    minTetQuality 1e-18;
    minTwist 0.02;
    minDeterminant 0.001;
    minFaceWeight 0.05;
    minVolRatio 0.01;

    nSmoothScale 4;
    errorReduction 0.8;

    relaxed
    {
        maxNonOrtho 75;
    }
}

// Merge tolerance
mergeTolerance 1e-6;


// ************************************************************************* //