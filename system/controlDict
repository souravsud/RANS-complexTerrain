FoamFile
{
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     simpleFoam;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

endTime         20000;

deltaT          1;

writeControl    timeStep;

writeInterval   5000;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

libs ("libatmosphericModels.so");

// ************************************************************************* //


functions
{
    fileUpdate_Solution
    {
        type              timeActivatedFileUpdate;
        libs              (utilityFunctionObjects);
        writeControl      timeStep;
        writeInterval     1;
        fileToUpdate      "$FOAM_CASE/system/fvSchemes";
        timeVsFile
        (
            (-1   "$FOAM_CASE/system/fvSchemes_1")
            (1000 "$FOAM_CASE/system/fvSchemes_2")
        );
    }
    
    towerProfiles
    {
        type            sets;
        libs            (sampling);  // Changed from functionObjectLibs
        enabled         true;
        verbose         true;
        interpolationScheme cellPoint;
        writeControl    writeTime;
        writeInterval   1;
        
        fields
        (
            U k epsilon
        );
        
        sets
        (
            tower_trSE_04
            {
                type            uniform;  // Changed from lineCell
                axis            xyz;
                start           (607684.698 4395884.594 0);
                end             (607684.698 4395884.594 3000);
                nPoints         1000;
            }
            tower_trSE_09
            {
                type            uniform;
                axis            xyz;
                start           (608437.686 4396477.584 0);
                end             (608437.686 4396477.584 3000);
                nPoints         1000;
            }
            tower_trSE_13
            {
                type            uniform;
                axis            xyz;
                start           (608815.680 4396747.579 0);
                end             (608815.680 4396747.579 3000);
                nPoints         1000;
            }
        );
        
        setFormat       csv;
        setPrecision    6;
    }
}