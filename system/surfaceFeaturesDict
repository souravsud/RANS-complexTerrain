FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      surfaceFeaturesDict; // Note the object name matches the utility
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

surfaces
(
    // List of surface files to process. These can be STL, OBJ, etc.
    // The file names should match the ones in your case directory.
    "terrain.stl"
);

includedAngle 150; // Angle threshold for feature extraction

trimFeatures
{
    // Remove features with fewer than the specified number of edges
    minElem         10;
}