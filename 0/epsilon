FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      epsilon;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -3 0 0 0 0];

internalField   uniform 0.00000496;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           nonuniform
        #include        "include/inletEpsilon"
        ;
    }
    
    outlet
    {
        type            zeroGradient;
    }
    
    ground
    {
        type            epsilonWallFunction;
        Cmu             0.033;
        kappa           0.4;
        E               9.8;
        value           uniform 0.0016;
    }
    
    sky
    {
        type            slip;
    }
    
    sides
    {
        type            slip;
    }
    
    "proc.*"
    {
        type            processor;
    }
}

