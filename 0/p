FoamFile
{
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "include/initialConditions"

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform $pressure;

boundaryField
{
    inlet
    {
        type            fixedValue;
        value           uniform 0;
    }

    outlet
    {
        type            fixedValue;
        value           uniform $pressure;
    }

    terrain
    {
        type            fixedGradient;
        gradient        uniform 0;
    }
    ground
    {
        type            zeroGradient;
    }

    #include "include/sideAndTopPatches"
}

